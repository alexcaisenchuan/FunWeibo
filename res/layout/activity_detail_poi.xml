<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
		
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
	        
	        <ImageView 
	            android:id="@+id/img_place_img"
	            android:layout_width="70dp"
	            android:layout_height="70dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/empty_photo"
	            android:layout_marginLeft="5sp"
	            android:layout_marginRight="15sp"
	            android:layout_marginTop="5sp"
	            android:layout_marginBottom="5sp"
	            />
	            
	        <TextView 
	            android:id="@+id/text_place_name"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="18sp"
	            android:layout_gravity="center_vertical"
	            />
	    </LinearLayout>
		    
	    <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
	        android:padding="5dp">
	        
	        <TextView 
	            android:text="@string/text_place_address"
	            android:layout_width="80dp"
	            android:layout_height="wrap_content"
	            android:textSize="18sp"/>
	        
	        <TextView 
	            android:id="@+id/text_place_address"
	            android:text="111"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="18sp"/>
	        
	    </LinearLayout>
	    
	    <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
	        android:padding="5dp">
	        
	        <TextView 
	            android:text="@string/text_place_phone"
	            android:layout_width="80dp"
	            android:layout_height="wrap_content"
	            android:textSize="18sp"/>
	        
	        <TextView 
	            android:id="@+id/text_place_phone"
	            android:text="111"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="18sp"/>
	        
	    </LinearLayout>
	    
	    <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
	        android:padding="5dp">
	        
	        <TextView 
	            android:text="@string/text_place_category"
	            android:layout_width="80dp"
	            android:layout_height="wrap_content"
	            android:textSize="18sp"/>
	        
	        <TextView 
	            android:id="@+id/text_place_category"
	            android:text="111"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="18sp"/>
	        
	    </LinearLayout>
	    
	    <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            
            <TextView 
                android:text="@string/text_place_url"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>
            
            <TextView 
                android:id="@+id/text_place_url"
                android:text="111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>
            
        </LinearLayout>
	</LinearLayout>
</ScrollView>